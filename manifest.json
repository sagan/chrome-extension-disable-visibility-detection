{
    "name": "Disable visibility detection",
    "description": "Prevent website from accessing itself visibility info",
    "version": "1.0.0",
    "author": "Jacques De SAGAN",
    "manifest_version": 2,
    "permissions": ["*://*/*"],
    "icons": {
    },
    "web_accessible_resources" : ["/disable-visibility-detection.js"],
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "run_at": "document_start",
            "all_frames": true,
            "js": ["content.js"]
        }
    ]
}